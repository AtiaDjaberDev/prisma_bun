generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model clients {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(255)
  phone    String?    @db.VarChar(255)
  address  String?    @db.VarChar(255)
  address2  String?    @db.VarChar(255)
  address3  String?    @db.VarChar(255)
  address4  String?    @db.VarChar(255)
  address5  String?    @db.VarChar(255)
  factures factures[]
  sales    sales[]
}

model depoys {
  id    Int     @id @default(autoincrement())
  name  String  @db.VarChar(255)
  sales sales[]
}

model factures {
  id         Int       @id @default(autoincrement())
  client_id  Int?
  montant    Decimal   @default(0.000000000000000000000000000000)
  pay        Decimal   @default(0.000000000000000000000000000000)
  rest       Decimal   @default(0.000000000000000000000000000000)
  remise     Decimal   @default(0.000000000000000000000000000000)
  gift       Boolean   @default(false)
  remark     String?   @db.VarChar(255)
  user_id    Int?
  deleted_at DateTime?
  created_at DateTime? @default(now())
  updated_at DateTime?
  clients    clients?  @relation(fields: [client_id], references: [id])
  users      users?    @relation(fields: [user_id], references: [id])
  sales      sales[]

  @@index([client_id], map: "factures_client_id_fkey")
  @@index([user_id], map: "factures_user_id_fkey")
}

model products {
  id         Int     @id @default(autoincrement())
  name       String  @db.VarChar(255)
  barcode    String  @db.VarChar(255)
  price      Decimal @default(0.000000000000000000000000000000)
  sell_price Decimal @default(0.000000000000000000000000000000)
  quantity   Float   @default(0)
  sales      sales[]
}

model sales {
  id             Int       @id @default(autoincrement())
  product_id     Int
  facture_id     Int
  client_id      Int?
  name           String    @db.VarChar(255)
  barcode        String?   @db.VarChar(255)
  quantity       Float     @default(0)
  price          Decimal   @default(0.000000000000000000000000000000)
  sell_price     Decimal   @default(0.000000000000000000000000000000)
  total          Decimal   @default(0.000000000000000000000000000000)
  depot_id       Int
  deleted_at     DateTime?
  created_at     DateTime? @default(now())
  updated_at     DateTime?
  discount_price Decimal?  @default(0.000000000000000000000000000000)
  clients        clients?  @relation(fields: [client_id], references: [id])
  depoys         depoys    @relation(fields: [depot_id], references: [id])
  factures       factures  @relation(fields: [facture_id], references: [id])
  products       products  @relation(fields: [product_id], references: [id])

  @@index([client_id], map: "sales_client_id_fkey")
  @@index([depot_id], map: "sales_depot_id_fkey")
  @@index([facture_id], map: "sales_facture_id_fkey")
  @@index([product_id], map: "sales_product_id_fkey")
}

model users {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(255)
  username String     @unique @db.VarChar(255)
  password String
  phone    String?    @db.VarChar(255)
  factures factures[]
}
